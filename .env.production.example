# Production Environment Variables Template
# Copy this file to .env.production and fill in your values

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=datagusto

# JWT Configuration (REQUIRED - Generate with: openssl rand -hex 32)
JWT_SECRET_KEY=
JWT_REFRESH_SECRET_KEY=

# Application Settings
ENABLE_REGISTRATION=false
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Let's Encrypt Configuration
LETSENCRYPT_EMAIL=your-email@example.com

# CORS Configuration (Optional - defaults are set in config.py)
# CORS_ORIGINS=https://app.datagusto.io,https://your-custom-domain.com

# External Service Keys (Optional)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
OPENAI_API_KEY=

# LLM Configuration (Guardrail Evaluation)
# Provider: openai | anthropic | ollama
LLM_PROVIDER=openai
LLM_MODEL=
LLM_API_KEY=
# Only required for Ollama
LLM_ENDPOINT=
# Default: 32000
LLM_MAX_TOKENS=32000

# Domain Configuration (Update if using different domains)
# These are built into the Docker images, so changing them requires rebuilding
# NEXT_PUBLIC_API_URL=https://api.datagusto.io
# NEXT_PUBLIC_API_VERSION=v1
