# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL database credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=datagusto

# Test database name
TEST_POSTGRES_DB=datagusto_test

# =============================================================================
# JWT Authentication Configuration
# =============================================================================
# IMPORTANT: Generate strong random keys for production using:
#   openssl rand -hex 32
JWT_SECRET_KEY=your-very-secure-secret-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET_KEY=your-refresh-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Application Configuration
# =============================================================================
PROJECT_NAME=DataGusto Platform API
API_V1_STR=/api
ENVIRONMENT=development
ENABLE_REGISTRATION=true
DEBUG=false

# =============================================================================
# LLM Configuration (for Guardrail Evaluation)
# =============================================================================
# Provider: "openai" | "anthropic" | "ollama"
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_API_KEY=your-llm-api-key-here
# LLM_ENDPOINT is only required for Ollama
LLM_ENDPOINT=
# Max tokens for LLM responses (provider-dependent upper bound)
LLM_MAX_TOKENS=32000

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=["http://localhost:3000"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]
