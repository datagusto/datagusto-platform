# =============================================================================
# DataGusto Platform - Environment Variables
# =============================================================================
# Copy this file to .env and update the values for your environment
# SECURITY WARNING: Never commit .env file to version control!
#
# For production deployment, generate strong random keys:
#   openssl rand -hex 32


# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL database credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=datagusto

# Test database name
TEST_POSTGRES_DB=datagusto_test


# =============================================================================
# JWT Authentication Configuration
# =============================================================================
# IMPORTANT: Generate strong random keys for production using:
#   openssl rand -hex 32

# JWT secret key (minimum 32 characters required)
JWT_SECRET_KEY=your-very-secure-secret-key-change-this-in-production-min-32-chars

# JWT refresh token secret key (minimum 32 characters required)
JWT_REFRESH_SECRET_KEY=your-refresh-secret-key-here-change-in-production-min-32-chars

# JWT algorithm (default: HS256)
ALGORITHM=HS256

# Token expiration settings
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7


# =============================================================================
# LLM Configuration (Guardrail Evaluation)
# =============================================================================
# Configuration for LLM-based guardrail evaluation system

# LLM Provider: openai, anthropic, azure, ollama, etc.
LLM_PROVIDER=openai

# Model name (e.g., gpt-4, gpt-3.5-turbo, claude-3-opus-20240229)
LLM_MODEL=gpt-4

# API key for the LLM provider
# OpenAI: Get from https://platform.openai.com/api-keys
# Anthropic: Get from https://console.anthropic.com/
LLM_API_KEY=your-llm-api-key-here

# Custom endpoint URL (optional, for Azure OpenAI or self-hosted models)
# Leave empty for default provider endpoints
LLM_ENDPOINT=


# =============================================================================
# Application Configuration
# =============================================================================

# Project name (displayed in API documentation)
PROJECT_NAME=DataGusto Platform API

# API version prefix
API_V1_STR=/api

# Environment name
ENVIRONMENT=development

# Enable user registration endpoint
# Set to 'true' for development, 'false' for production (invite-only)
ENABLE_REGISTRATION=true

# Enable debug mode
# Set to 'true' for development (enables API docs, auto-reload)
# Set to 'false' for production
DEBUG=false


# =============================================================================
# Service Ports
# =============================================================================

# Backend API service port
BACKEND_PORT=8000

# Frontend web application port
FRONTEND_PORT=3000


# =============================================================================
# Frontend Configuration
# =============================================================================

# Backend API URL (used by Next.js frontend)
# Development: http://localhost:8000
# Production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# API version prefix (default: v1)
NEXT_PUBLIC_API_VERSION=v1


# =============================================================================
# Optional Configuration
# =============================================================================

# Enable webpack bundle analyzer (optional, for frontend optimization)
# Set to 'true' to analyze bundle size during build
# ANALYZE=false
